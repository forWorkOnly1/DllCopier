<Window x:Class="DllCopierWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DLL Copier" Height="800" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Button Content="Copy DLLs" Click="CopyDlls_Click" Margin="0,0,0,10" Height="30"/>
            <TextBox x:Name="LogTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="300" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
